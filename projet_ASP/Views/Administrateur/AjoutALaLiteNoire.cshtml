@model projet_ASP.Models.ApplicationUser
@using Microsoft.AspNet.Identity;



    @{
        ViewBag.Title = "AjoutALaLiteNoire";
    }

    <h2>Ajout A La Lite Noire</h2>

    @using (Html.BeginForm())
    {
        <h4>Pour Quelle Raison vous voulez Ajouter Mr.@Model.nomComplet a la liste noire:</h4>
        <p hidden id="id" name="id" @*value="@ViewBag.id"*@>@Model.Id</p>
        <div class="form-group">
            <div class="col-md-10">
                <input type="text" id="Description" name="Desc" @*value="@ViewBag.Desc"*@placeholder="Unjustifié" />
            </div>
         </div>
        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                     <input type="submit" value="Ajouter" class="btn btn-default" />

            </div> 
          
        </div>

        <div>
            @Html.ActionLink("Annuler", null, null, null, new { href = Request.UrlReferrer })
        </div>
    }