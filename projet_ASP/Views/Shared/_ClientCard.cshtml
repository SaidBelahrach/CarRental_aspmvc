@if (Model.ApplicationUser.idListeNoire != null)
{
    <div class="card" >
        <div class="user-card ">
            <div style="" class="card-img">
                <img style="" class="img-responsive" src="@ViewData["ProfileImg"]" width="" height="100%" />
            </div>
        </div>
        <div class="general">
            <h3 class="mt-2"><a href="@Url.Action("Index", "Locataire", new { id = Model.ApplicationUserID })">@Model.ApplicationUser.nomComplet</a></h3>

            <div class="card-icon-container " style="">
                <label class="datails-item">
                    <span class="fas fa-car icon  "></span>
                    <span>@Html.ActionLink(@Model.reservations.Count + " reservations", "Index", "Reservations", new { id = Model.ApplicationUserID }, new { @class = "text-info" })  </span>
                </label>
                <label class="datails-item">
                    <span class="fas fa-user icon  "></span>
                    <span> @Html.ActionLink("Ajouter a la liste noire", "AjoutALaLiteNoire", new { id = Model.ApplicationUserID }, new { @class = "text-info" }) </span>
                </label>
                <label class="datails-item">
                    <span style="background-color:white" class="fas fa-bookmark">  </span>

                    <span> <a style="cursor:pointer" class="text-info" id="Favorites_@Model.ApplicationUserID" onclick='Add_To_Favorites("@Model.ApplicationUserID")'>Ajouter Aux favoris</a>  </span>
                </label>

            </div>


        </div>
    </div>
    }
    else
