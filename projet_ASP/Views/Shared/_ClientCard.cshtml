            <div class="card-icon-container " style="">
                <label class="datails-item">
                    <span class="fas fa-car icon  " style = "color:white"></span>
                    <span>@Html.ActionLink(@Model.reservations.Count + " reservations", "Index", "Reservations", new { id = Model.ApplicationUserID }, new {   style = "color:white" })  </span>
                </label>
                <label class="datails-item">
                    <span class="fas fa-user-slash icon " style = "color:white"></span>
                    <span > @Html.ActionLink("Retirer de la liste noire", "ListeNoire",new { }, new { style = "color:white" }) </span>
                </label>
               

            </div>


        </div>
    </div>
